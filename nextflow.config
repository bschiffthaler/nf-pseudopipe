singularity {
  enabled = true
}

params {
  gff = "${baseDir}/data/Potra02_genes_exon-only_chr.gff"
  fasta_nomask = "${baseDir}/data/Potra02_genome_chr.fasta"
  fasta_mask = "${baseDir}/data/Potra02_genome_hardmasked_chr.fasta"
  fasta_protein = "${baseDir}/data/test.fasta"

  splitN = 100
  blast_time = "1h"
}

process {
  executor = "local"
  memory = "4GB"
  time = "30m"
}
